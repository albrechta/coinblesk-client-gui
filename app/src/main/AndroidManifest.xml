<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coinblesk.client.coinblesk_client_gui">

    <!--permissions for wallet-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!--permissions for p2p communication-->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.NFC"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <!--permissions for bluetooth/wifi discovery-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeMaterial">

        <activity
            android:name="com.coinblesk.client.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="bitcoin" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.coinblesk.client.TransactionDetailActivity"
            android:parentActivityName="com.coinblesk.client.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coinblesk.client.MainActivity" />
        </activity>

        <activity
            android:name="com.coinblesk.client.SettingsActivity"
            android:parentActivityName="com.coinblesk.client.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coinblesk.client.MainActivity" />
        </activity>

        <activity
            android:name="com.coinblesk.client.AboutActivity"
            android:parentActivityName="com.coinblesk.client.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coinblesk.client.MainActivity" />
        </activity>

        <activity
            android:name="com.coinblesk.client.BackupActivity"
            android:parentActivityName="com.coinblesk.client.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coinblesk.client.MainActivity" />
        </activity>

        <service android:name="com.coinblesk.payments.WalletService" >
        </service>
        <service android:name="com.coinblesk.payments.communications.peers.ServerPeerService" >
        </service>
        <service
            android:name="com.coinblesk.payments.communications.peers.nfc.NFCService2"
            android:exported="true"
            android:permission="android.permission.BIND_NFC_SERVICE">
            <intent-filter>
                <action android:name="android.nfc.cardemulation.action.HOST_APDU_SERVICE" />
            </intent-filter>
            <meta-data
                android:name="android.nfc.cardemulation.host_apdu_service"
                android:resource="@xml/apduservice" />
        </service>
    </application>

</manifest>