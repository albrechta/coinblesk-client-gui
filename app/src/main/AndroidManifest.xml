<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uzh.ckiller.coinblesk_client_gui">

    <!--permissions for wallet-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!--permissions for p2p communication-->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.NFC"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeMaterial"
        android:name="android.support.multidex.MultiDexApplication">



        <activity
            android:name="com.uzh.ckiller.coinblesk_client_gui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.uzh.ckiller.coinblesk_client_gui.DummyDataDetailActivity"
            android:parentActivityName="com.uzh.ckiller.coinblesk_client_gui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.uzh.ckiller.coinblesk_client_gui.MainActivity" />
        </activity>

        <activity
            android:name="com.uzh.ckiller.coinblesk_client_gui.SettingsActivity"
            android:parentActivityName="com.uzh.ckiller.coinblesk_client_gui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.uzh.ckiller.coinblesk_client_gui.MainActivity" />
        </activity>

        <service android:name="ch.papers.payments.WalletService" >
        </service>
    </application>

</manifest>