<resources>

    <!-- Base application theme. -->
    <style name="AppThemeMaterial" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <!-- ListView related themes -->
    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/main_color_grey_100</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>
    <!-- ListView related themes end here -->


    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--Keyboard related styles-->
    <style name="keyboard_text_view">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/cell_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:textSize">@dimen/text_size_numeric_keypad</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="keyboard_imageview">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxHeight">@dimen/text_size_numeric_keypad</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxWidth">@dimen/text_size_numeric_keypad</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/cell_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="keyboard_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Custom Card View-->
    <style name="card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/card_view_margin</item>
        <item name="cardBackgroundColor">@color/material_grey_800</item>
        <item name="cardElevation">@dimen/card_view_elevation</item>
        <item name="cardCornerRadius">@dimen/card_view_corner_radius</item>
    </style>

    <style name="card_view_large_text_view">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
    </style>

    <style name="card_view_small_textview">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="amount_switch_image_view">
        <item name="android:layout_height">@dimen/ic_switch_currencies_size</item>
        <item name="android:layout_width">@dimen/ic_switch_currencies_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_switch_currencies_48_nopad</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_toLeftOf">@id/amount_large_text_view</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="balance_switch_image_view">
        <item name="android:layout_height">@dimen/ic_switch_currencies_size</item>
        <item name="android:layout_width">@dimen/ic_switch_currencies_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_switch_currencies_48_nopad</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_above">@id/balance_large</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="amount_backspace_image_view">
        <item name="android:layout_height">@dimen/ic_backspace_size</item>
        <item name="android:layout_width">@dimen/ic_backspace_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_backspace_48_nopad</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_toRightOf">@id/amount_large_text_view</item>
    </style>

    <style name="keyboard_frame_layout">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1.2857</item>
    </style>

    <style name="amount_frame_layout">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="AppThemeMaterial">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="nav_drawer_header">
        <item name="android:layout_height">@dimen/nav_drawer_header_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="nav_drawer_header_logo_image_view">
        <item name="android:layout_height">@dimen/nav_drawer_header_logo_size</item>
        <item name="android:layout_width">@dimen/nav_drawer_header_logo_size</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/nav_drawer_header_logo_marginLeft</item>
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>

    <style name="nav_drawer_header_username_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignLeft">@id/nav_drawer_logo</item>
        <item name="android:layout_alignStart">@id/nav_drawer_logo</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">left</item>
        <item name="android:text">@string/username</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:visibility">visible</item>
        <item name="android:textSize">@dimen/nav_drawer_username_textview_size</item>
    </style>

    <style name="card_view_connection">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="card_view_connection_icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:alpha">0.25</item>
    </style>

    <!--Detail Transaction Styles-->
    <style name="detail_transaction_main_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="detail_transaction_appbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/detail_backdrop_height</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="detail_transaction_collapsing_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="contentScrim">@color/colorPrimary</item>
        <item name="expandedTitleMarginEnd">64dp</item>
        <item name="expandedTitleMarginStart">48dp</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
    </style>

    <style name="detail_transaction_backdropimage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_collapseMode">parallax</item>
    </style>

    <style name="detail_transaction_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="layout_collapseMode">pin</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="qr_dialog">
        <item name="android:layout_width">@dimen/qr_dialog_size</item>
        <item name="android:layout_height">@dimen/qr_dialog_size</item>
        <item name="android:maxWidth">@dimen/qr_dialog_size</item>
        <item name="android:maxHeight">@dimen/qr_dialog_size</item>
        <item name="android:background">@color/material_grey_800</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="qr_code">
        <item name="android:layout_width">@dimen/qr_code_size</item>
        <item name="android:layout_height">@dimen/qr_code_size</item>
        <item name="android:maxWidth">@dimen/qr_code_size</item>
        <item name="android:maxHeight">@dimen/qr_code_size</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
    </style>


</resources>