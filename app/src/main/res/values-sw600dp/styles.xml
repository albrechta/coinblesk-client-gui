<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="keyboard_clear_text_view">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/cell_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="keyboard_custom_text_view">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/cell_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/main_color_400</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="input_values_text_view">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:paddingBottom">70dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/main_color_400</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:layout_above">@id/amount_large_text_view</item>
    </style>

</resources>