<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addresses.AddressActivity">

    <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:elevation="4dp"
            app:theme="@style/AppThemeMaterial" />

    <com.coinblesk.client.ui.widget.RecyclerView
            android:id="@+id/addresslist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_below="@+id/toolbar"
            android:background="@color/material_grey_800"/>

    <TextView
            android:id="@+id/addresses_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The address list is empty."
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/secondary_text_default_material_dark"/>
</RelativeLayout>
