<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/send_keyboard_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/send_keyboard_amount"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/send_keyboard_amount_card_view"
            style="@style/card_view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/send_keyboard_amount_large"
                    style="@style/card_view_large_textview"
                    android:textSize="@dimen/text_size_xxlarge" />

                <TextView
                    android:id="@+id/send_keyboard_amount_small"
                    style="@style/card_view_small_textview"
                    android:layout_below="@+id/send_keyboard_amount_large" />

                <ImageView
                    android:id="@+id/send_keyboard_switch_currencies"
                    style="@style/send_keyboard_switch_currencies_imageview" />

                <ImageView
                    android:id="@+id/send_keyboard_backspace"
                    style="@style/send_keyboard_backspace_imageview" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </FrameLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2857">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/keyboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/keypad_row">

                <TextView
                    android:id="@+id/keyboard_first_row_first_col"
                    style="@style/keypad_textview"
                    android:text="@string/keypad_first_row_first_col" />

                <TextView
                    android:id="@+id/keyboard_first_row_second_col"
                    style="@style/keypad_textview"
                    android:text="@string/keypad_first_row_second_col" />

                <TextView
                    android:id="@+id/keyboard_first_row_third_col"
                    style="@style/keypad_textview"
                    android:text="@string/keypad_first_row_third_col" />

            </LinearLayout>

            <LinearLayout style="@style/keypad_row">


                <TextView
                    android:id="@+id/keyboard_second_row_first_col"
                    style="@style/keypad_textview"
                    android:text="@string/keypad_second_row_first_col" />

                <TextView
                    android:id="@+id/keyboard_second_row_second_col"
                    style="@style/keypad_textview"
                    android:text="@string/keypad_second_row_second_col" />

                <TextView
                    android:id="@+id/keyboard_second_row_third_col"
                    style="@style/keypad_textview"
                    android:text="@string/keypad_second_row_third_col" />
            </LinearLayout>

            <LinearLayout style="@style/keypad_row">

                <TextView
                    android:id="@+id/keyboard_third_row_first_col"
                    style="@style/keypad_textview"
                    android:text="@string/keypad_third_row_first_col" />

                <TextView
                    android:id="@+id/keyboard_third_row_second_col"
                    style="@style/keypad_textview"
                    android:text="@string/keypad_third_row_second_col" />

                <TextView
                    android:id="@+id/keyboard_third_row_third_col"
                    style="@style/keypad_textview"
                    android:text="@string/keypad_third_row_third_col" />

            </LinearLayout>


            <LinearLayout style="@style/keypad_row">

                <TextView
                    android:id="@+id/keyboard_fourth_row_first_col"
                    style="@style/keypad_textview"
                    android:text="@string/keypad_fourth_row_first_col" />

                <TextView
                    android:id="@+id/keyboard_fourth_row_second_col"
                    style="@style/keypad_textview"
                    android:text="@string/keypad_fourth_row_second_col" />

                <ImageView
                    android:id="@+id/keyboard_fourth_row_third_col"
                    style="@style/keypad_imageview"
                    android:src="@drawable/ic_checkmark_accent_36_nopad"
                    android:textIsSelectable="false" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>