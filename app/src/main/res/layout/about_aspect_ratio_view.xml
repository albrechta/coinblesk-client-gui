<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        app:theme="@style/AppThemeMaterial"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">


            <com.uzh.ckiller.coinblesk_client_gui.ui.widget.AspectRatioView
                android:id="@+id/social_coinblesk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:aspectRatio="@dimen/aspect_phi">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/social_coinblesk">

                    <ImageView
                        android:id="@+id/social_coinblesk_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleType="centerInside"
                        android:elevation="4dp"
                        android:src="@drawable/about_cb" />

                    <include layout="@layout/social_icons_horizontal" />
                </RelativeLayout>
            </com.uzh.ckiller.coinblesk_client_gui.ui.widget.AspectRatioView>

            <com.uzh.ckiller.coinblesk_client_gui.ui.widget.AspectRatioView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:aspectRatio="3.236">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/social_github">

                        <TextView
                            android:id="@+id/social_github"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:text="@string/social_github_content_description"
                            android:textAppearance="@style/TextAppearance.Body2" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/social_website">

                        <TextView
                            android:id="@+id/social_website"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:selectableItemBackground"
                            android:clickable="true"
                            android:contentDescription="@string/social_website_content_description"
                            android:focusable="true"
                            android:gravity="center"
                            android:text="@string/social_website"
                            android:textAppearance="@style/TextAppearance.Body2" />
                    </FrameLayout>
                </LinearLayout>
            </com.uzh.ckiller.coinblesk_client_gui.ui.widget.AspectRatioView>

                    <com.google.samples.apps.iosched.ui.widget.AspectRatioView
                        android:id="@+id/about_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:aspectRatio="3.236">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="4"
                            android:background="@color/about_text"
                            android:baselineAligned="false">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/TextAppearance.Body2"
                                    android:text="@string/about_text"
                                    android:layout_centerInParent="true"
                                    android:drawablePadding="@dimen/social_drawable_padding"
                                    android:drawableLeft="@drawable/hash_io_15_flat"
                                    android:contentDescription="@string/about_text_not_clickable"
                                    android:clickable="false"
                                    android:focusable="false" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent">

                                <include layout="@layout/social_icons_vertical"></include>
                            </RelativeLayout>
                        </LinearLayout>
                    </com.google.samples.apps.iosched.ui.widget.AspectRatioView>

