<resources>

    <!-- Base application theme. -->
    <style name="AppThemeMaterial" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item> <!-- actionMode on top of toolbar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:alertDialogTheme">@style/Theme.AlertDialog</item>
    </style>

    <!--This fixes the incorrect android:colorAccent coloring in EditText inside of SendDialogFragment-->
    <style name="EditTextTheme">
        <item name="android:colorControlNormal">#c5c5c5</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="Theme.AlertDialog" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

</resources>
