<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="amount_switch_image_view">
        <item name="android:layout_height">@dimen/ic_switch_currencies_size</item>
        <item name="android:layout_width">@dimen/ic_switch_currencies_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/ic_switch_currencies_48_nopad</item>
        <item name="android:layout_above">@id/amount_large_text_view</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="amount_backspace_image_view">
        <item name="android:layout_height">@dimen/ic_backspace_size</item>
        <item name="android:layout_width">@dimen/ic_backspace_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/ic_backspace_48_nopad</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_below">@id/amount_large_text_view</item>
    </style>

    <style name="keyboard_frame_layout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="amount_frame_layout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="nav_drawer_header">
        <item name="android:layout_height">@dimen/nav_drawer_header_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="nav_drawer_header_logo_image_view">
        <item name="android:layout_height">@dimen/nav_drawer_header_logo_size</item>
        <item name="android:layout_width">@dimen/nav_drawer_header_logo_size</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:useDefaultMargins">true</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:layout_marginLeft">@dimen/nav_drawer_header_logo_marginLeft</item>
        <item name="android:src">@drawable/logotype_coinblesk_white</item>
    </style>

    <style name="nav_drawer_header_username_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignLeft">@id/nav_drawer_logo</item>
        <item name="android:layout_alignStart">@id/nav_drawer_logo</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">@dimen/nav_drawer_username_textview_size</item>
    </style>

    <style name="card_view_connection">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="qr_dialog_fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/material_grey_800</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="testnet">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:orientation">horizontal</item>
    </style>



</resources>