        <item name="android:layout_width">@dimen/send_switch_currencies_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/ic_switch_currencies_48_nopad</item>
